@page
@model MyApp.Namespace.AgendarCitaModel
@{
}
@using Consultorio.App.Dominio
<h1>Agendar Citas</h1>
<form method="post" class="mt-3">
 
    <div class="form-group row">
        <label asp-for="cedulaCliente" class="form-control">Cliente</label>
        <select class="form-control" asp-for="cedulaCliente" asp-items="@Model.clientes"></select>
    </div>
    <div class="form-group row">
        <label asp-for="cedulaMedico" class="form-control">Médico</label>
        <select class="form-control" asp-for="cedulaMedico" asp-items="@Model.medicos"></select>
    </div>
    <div class="form-group row">
        <label asp-for="cedulaAuxiliar" class="form-control">Auxiliar</label>
        <select class="form-control" asp-for="cedulaAuxiliar" asp-items="@Model.auxiliares"></select>
    </div>
    
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Agregar</button>
        <a asp-page="./CitasAgendadas" class="btn btn-primary">Cancelar</a>
    </div>

</form>
