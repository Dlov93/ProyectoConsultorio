@page
@model MyApp.Namespace.AgendarCitaModel
@{
}
@using Consultorio.App.Dominio
<h1>Agendar Citas</h1>
<p class="text-danger">@Model.Mensaje</p>
<form method="post" class="mt-3">
 
    <div class="form-group row">
        <label asp-for="cedulaCliente" class="form-control">Cliente</label>
        <select class="form-control" asp-for="cedulaCliente" asp-items="@Model.clientes"></select>
    </div>
    <div class="form-group row">
        <label asp-for="cedulaMedico" class="form-control">Médico</label>
        <select class="form-control" asp-for="cedulaMedico" asp-items="@Model.medicos"></select>
    </div>
    <div class="form-group row">
        <label asp-for="cedulaAuxiliar" class="form-control">Auxiliar</label>
        <select class="form-control" asp-for="cedulaAuxiliar" asp-items="@Model.auxiliares"></select>
    </div>
    <div class="form-group row">
        <label asp-for="Cita.Dia" class="form-control">Dia</label>
        <input class="form-control" asp-for="Cita.Dia" >
        <span asp-validation-for="Cita.Dia" class="text-danger" ></span>
    </div>
    <div class="form-group row">
        <label asp-for="Cita.Hora" class="form-control">Hora</label>
        <input class="form-control" asp-for="Cita.Hora" >
        <span asp-validation-for="Cita.Hora" class="text-danger" ></span>
    </div>
    <div class="form-group row">
        <label asp-for="Cita.Sala" class="form-control">Sala</label>
        <select class="form-control" asp-for="Cita.Sala" asp-items="Html.GetEnumSelectList<Sala>()"></select>
    </div>
    <div class="form-group row">
        <label asp-for="Cita.Descripcion" class="form-control">Descripción</label>
        <input asp-for="Cita.Descripcion" class="form-control">
        <span asp-validation-for="Cita.Descripcion" class="text-danger"></span>
    </div>
    
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Agregar</button>
        <a asp-page="./CitasAgendadas" class="btn btn-primary">Cancelar</a>
    </div>

</form>
