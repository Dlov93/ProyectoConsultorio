}
@using Consultorio.App.Dominio
<h1>Agendar Citas</h1>
<form method="post" class="mt-3">
    <input hidden asp-for="cita.ID"/>
    <div class="form-group row">
        <label asp-for="cita.cliente" class="col-sm-2">Cliente</label>
        <input asp-for="cita.cliente" class="form-control" value="" >
            
        </div>
    <div class="form-group row">
        <label asp-for="cita.medico" class="col-sm-2">Medico</label>
            <input asp-for="cita.medico" class="form-control" value="" >
        
        </div>
        <div class="form-group row">
        <label asp-for="cita.medico.Horario" class="col-sm-2">Horario Disponible</label>
        <input asp-for="cita.medico.Horario" class="form-control" value="" required></select>
            <option value="-"></option>
        </div>
        <div class="form-group row">
        <label asp-for="cita.auxiliar" class="col-sm-2">Auxiliar a cargo</label>
        <input asp-for="cita.auxiliar" class="form-control" value="" required></select>
            <option value="-"></option>
        </div>
        <div class="form-group row">
        <button type="submit" class="btn btn-primary">Agregar</button>
        <a asp-page="./CitasAgendadas" class="btn btn-primary">Cancelar</a>
    </div>
        </form>
